    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            // Another configuration for launching Chrome
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            // URL of the application to be debugged
            "url": "http://localhost:8080",
            // Set the root directory of the web application
            "webRoot": "${workspaceFolder}"
        }
    ]
}
